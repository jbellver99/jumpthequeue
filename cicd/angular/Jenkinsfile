pipeline {
    agent any
    
    tools {
        nodejs "nodejs"
        maven "maven"
    }

    options{
        disableConcurrentBuilds()
    }

    environment {

        angularDir = 'angular'

        srcDir = 'angular/src'

        sonarTool = 'SonarScanner'

        sonarEnv = "SonarQube"

        dockerTool = 'docker'

        groupId = 'com.devonfw.jtqj'

        repositoryId = 'Jump-The-Queue'

        nexusUrl = 'nexus:8081'
    }

    stages {
        stage ('Install Application') {
            steps {
                dir(angularDir) {
                    sh """npm install"""
                }
            }
        }

        stage ('SonarQube Code Analysis') {
            steps {
                script {
                    def scannerHome = tool sonarTool
                    withSonarQubeEnv(sonarEnv) {
                        sh """${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=angular \
                            -Dsonar.sources=${srcDir}
                        """
                    }
                }
            }
        }

        stage ('Build Application') {
            steps {
                dir(angularDir) {
                    sh """npm run build"""
                }
            }
        }

        stage ('Create The Docker Image') {
            steps {
                script {
                    dir(angularDir) {
                        tool dockerTool
                        docker.withTool(dockerTool) {
                            def image = docker.build("jump-the-queue/angular")
                        }
                    }
                }
            }
        }
        
        stage ('Deliver Image Into Nexus') {
            steps {
                script {
                    dir(angularDir) {
                        def props = readJSON file: 'package.json'
                        tool dockerTool
                        docker.withTool(dockerTool) {
                            sh """docker tag jump-the-queue/angular nexus:8081/angular:${props.version}"""
                            sh """docker push nexus:8081/angular:${props.version}"""
                        }
                    }
                }
            }
        }
    }
}
